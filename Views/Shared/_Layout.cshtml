<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - My Portfolio</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom CSS -->
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <!-- Main Content -->
    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <!-- Social Media + Footer -->
    <footer class="footer mt-5 py-4 text-center">
        <div class="social-media mb-3">
            <h3 style="color: #b30059;">Let's Connect 💗</h3>

            <a href="https://www.facebook.com/yourprofile" target="_blank">
                <img src="~/images/facebook.png" alt="Facebook" class="social-icon" />
            </a>

            <a href="https://www.linkedin.com/in/laone-setlhoke-856503167" target="_blank">
                <img src="~/images/linkedin.png" alt="LinkedIn" class="social-icon" />
            </a>
        </div>

        <p style="color: #555;">&copy; 2025 LT Setlhoke | <a href="#home" style="color:#b30059; text-decoration: none;">Back to Top</a></p>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Optional Scripts -->
    @RenderSection("Scripts", required: false)
</body>
</html>
